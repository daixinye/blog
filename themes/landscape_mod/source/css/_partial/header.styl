#header
  height: 50px
  width: 100%;
  position: relative
  box-shadow: 0 1px 3px rgba(0,0,0,.1)

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: #fff
  background-size: cover
  z-index: -1

#header-title
  color: #1a87e8
  float: left;
  height: 100%
  line-height: 50px
  font-size: 30px
  a
    text-decoration: none
    color: inherit

#main-nav
  float: left

$nav-link
  float: left
  color: #333
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  line-height: 50px
  padding-left: 30px
  font-weight: bolder
  &:hover
    opacity: 1

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px
